{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "t4u/heading",
  "version": "0.1.0",
  "title": "Заголовок",
  "icon": "heading",
  "category": "blocks",
  "description": "",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "isHide": {
      "type": "boolean",
      "default": false
    },
    "margin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": ""
      }
    },
    "classes": {
      "type": "string",
      "default": ""
    },
    "text": {
      "type": "string",
      "default": ""
    },
    "htmlTeg": {
      "type": "string",
      "enum": [
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6",
        "span"
      ],
      "default": "span"
    },
    "fontSize": {
      "type": "string",
      "enum": [
        "sm",
        "md",
        "lg",
        "xl",
        "2xl"
      ],
      "default": "xl"
    },
    "aligment": {
      "type": "string",
      "enum": [
        "left",
        "center",
        "right"
      ],
      "default": ""
    },
    "container": {
      "type": "string",
      "enum": [
        "sm",
        "md",
        "lg",
        "xl",
        "2xl",
        "full",
        false
      ],
      "default": false
    },
    "acfField": {
      "type": "string"
    }
  },
  "textdomain": "heading",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}