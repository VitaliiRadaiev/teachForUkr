{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "t4u/cards-grid",
  "version": "0.1.0",
  "title": "Картки з картинкою + маска + іконка",
  "category": "title_cards_visual-attributes",
  "icon": "layout",
  "description": "",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "isHide": {
      "type": "boolean",
      "default": false
    },
    "padding": {
      "type": "object",
      "default": {
        "top": "lg",
        "right": "",
        "bottom": "lg",
        "left": ""
      }
    },
    "margin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": ""
      }
    },
    "background": {
      "type": "string",
      "enum": [
        "bg-light-primary",
        "bg-light-primary-80"
      ],
      "default": "bg-light-primary-80"
    },
    "preview": {
      "type": "string"
    },
    "decor": {
      "type": "number",
      "default": 1
    }
  },
  "textdomain": "cards-grid",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}