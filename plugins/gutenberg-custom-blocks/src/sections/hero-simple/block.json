{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "t4u/hero-simple",
  "version": "0.1.0",
  "title": "Баннер простий",
  "category": "hero",
  "icon": "layout",
  "description": "",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "isHide": {
      "type": "boolean",
      "default": false
    },
    "margin": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "sm",
        "left": ""
      }
    },
    "container": {
      "type": "string",
      "enum": [
        "sm",
        "md",
        "lg",
        "xl",
        "2xl",
        "full"
      ],
      "default": "xl"
    },
    "aligment": {
      "type": "string",
      "enum": [
        "left",
        "center",
        "right"
      ],
      "default": "center"
    },
    "padding": {
      "type": "object",
      "default": {
        "top": "",
        "right": "",
        "bottom": "",
        "left": ""
      }
    },
    "background": {
      "type": "string",
      "enum": [
        "bg-light-primary",
        "bg-light-primary-80"
      ],
      "default": "bg-light-primary-80"
    }
  },
  "textdomain": "hero-simple",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}